@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Your username" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Your phone number" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-lg btn-primary w-100">
                    <i class="fas fa-save"></i> Save
                </button>
            </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}