@{
    ViewData["Title"] = "Admin Password Decryption";
}

<style>
    .Cust-card-margin {
        margin: 5px !important;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card Cust-card-margin">
            <div class="card-header">
                <div class="card-title">
                    <h2>🔐 Admin Password Decryption</h2>
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Decrypt" method="post">
                    <div class="row mt-3">
                        <div class="col-md-2">
                            <label for="encryptedText">Encrypted Password:</label>
                        </div>
                        <div class="col-md-6">
                            <textarea name="encryptedText" id="encryptedText" class="form-control" rows="4">@ViewBag.Original</textarea>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 offset-md-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-unlock"></i> Decrypt
                            </button>
                        </div>
                    </div>
                </form>

                @if (ViewBag.Decrypted != null)
                {
                    <div class="row mt-4">
                        <div class="col-md-2">
                            <label>Decrypted Password:</label>
                        </div>
                        <div class="col-md-6">
                            <textarea class="form-control" rows="2" readonly>@ViewBag.Decrypted</textarea>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
