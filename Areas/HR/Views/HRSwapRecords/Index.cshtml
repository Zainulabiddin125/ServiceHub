@model IEnumerable<HRSwapRecord>

@{
    ViewData["Title"] = "Attendance Swap Records";
}

<style>
    .Cust-card-margin {
        margin: 5px !important;
    }

    .table {
        margin-bottom: 0 !important;
    }
    /* Custom styles for DataTables buttons */
    .dt-buttons .btn {
        /* Add spacing between buttons */
        margin-right: 5px !important;
    }

        .dt-buttons .btn i {
            /* Add spacing between icon and text */
            margin-right: 5px !important;
        }

    /* Specific button colors */
    .btn-dt-primry {
        background-color: #0d6efd !important;
        border-color: #0d6efd !important;
        border-radius: 5px !important;
        color: white !important;
    }

    .btn-dt-success {
        background-color: #198754 !important;
        border-color: #198754 !important;
        border-radius: 5px !important;
        color: white !important;
    }

    .btn-dt-info {
        background-color: #0dcaf0 !important;
        border-color: #0dcaf0 !important;
        border-radius: 5px !important;
        color: white !important;
    }

    .btn-dt-danger {
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
        border-radius: 5px !important;
        color: white !important;
    }

    .btn-dt-warning {
        background-color: #ffc107 !important;
        border-color: #ffc107 !important;
        border-radius: 5px !important;
        color: white !important;
    }

</style>

<div class="row">
    <div class="col-lg-12">
        <div class="card Cust-card-margin">
            <div class="card-header">
                <div class="card-title">
                    <h2>Attendance Swap Records</h2>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label for="ipFilter">Filter by IP Address:</label>
                    </div>
                    <div class="col-md-3">
                        <select id="ipFilter" class="form-control" style="width: 100% !important;">
                            <option value="">All</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-3"> </div>
                <table id="connectionLogsTable" class="table table-striped table-bordered table-responsive" style="width:100% !important">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Emp #</th>
                            <th>Swap Time</th>
                            <th>Shift In</th>
                            <th>Shift Out</th>
                            <th>Creation Date</th>
                            <th>Machine IP</th>
                            <th>Machine Port</th>
                            <th>Machine ID</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#ipFilter').select2({
                placeholder: "Select an IP Address",
                allowClear: true
            });
            $.ajax({
                url: "/HR/HRSwapRecords/GetMachineIPs",
                type: "GET",
                success: function (data) {
                    var ipFilter = $('#ipFilter');
                    data.forEach(function (ip) {
                        ipFilter.append($('<option>', {
                            value: ip,
                            text: ip
                        }));
                    });
                }
            });
            var table = $('#connectionLogsTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/HR/HRSwapRecords/GetAttendanceRecords",
                    "type": "POST",
                    "data": function (d) {
                        d.ipAddress = $('#ipFilter').val();
                    }
                },
                "columns": [
                    { "data": "id" },
                    { "data": "emp_No" },
                    { "data": "swap_Time", "defaultContent": "" },
                    {
                        "data": "shift_In",
                        "render": function (data) {
                            return data ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-danger">No</span>';
                        }
                    },
                    {
                        "data": "shift_Out",
                        "render": function (data) {
                            return data ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-danger">No</span>';
                        }
                    },
                    { "data": "creation_Date", "defaultContent": "" },
                    { "data": "machine_IP" },
                    { "data": "machine_Port" },
                    { "data": "machineId" }
                ],
                "dom": '<"row"<"col-sm-2"l><"col-sm-10"Bf>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-5"i><"col-sm-7"p>>',
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, 100, 200, 500, 1000], [10, 25, 50, 100, 200, 500, 1000]],
                "buttons": [
                    {
                        extend: 'copy',
                        text: '<i class="fas fa-copy"></i> Copy',
                        className: 'btn btn-dt-primry btn-sm'
                    },
                    {
                        extend: 'csv',
                        text: '<i class="fas fa-file-csv"></i> CSV',
                        className: 'btn btn-dt-info btn-sm'
                    },
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-dt-success btn-sm'
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-dt-danger btn-sm'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Print',
                        className: 'btn btn-dt-warning btn-sm'
                    }
                ]
            });

            // Reload DataTable when IP filter changes
            $('#ipFilter').on('change', function () {
                table.ajax.reload();
            });
        });
    </script>
}